                <field name="write_uid"/>
            </xpath>
        </field>
    </record>

    <record id="student_extend_form_view" model="ir.ui.view">
        <field name="name">student.extend.form.view</field>
        <field name="model">school.student</field>
        <field name="inherit_id" ref="school_student.student_form_view"/>
        <field name="arch" type="xml">
                <xpath expr="//page[@id='page3']" position="replace"/>
        </field>
    </record>

    <record id="student_vew_extend_attribute" model="ir.ui.view">
        <field name="name">student.view.extend.attribute</field>
        <field name="model">school.student</field>
        <field name="inherit_id" ref="school_student.student_form_view"/>
        <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="required">1</attribute>
                    <attribute name="readonly">1</attribute>
                </field>

            <xpath expr="//field[@name='roll_number']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
