<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="weblearns_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <div class="header">
            <div class="text-center" style="border-bottom: 1px solid black;">
               <div class="row">
                   <div class="col-3 mb4">
                       <img alt="img" t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height:90px;"/>
                   </div>
                   <div class="col-3">
<!--                       <p>Hello your custom content also you can print.</p>-->
                       <p>Page <span class="page"/> / <span class="topage" /></p>
                       <p t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                   </div>
                   <div class="col-6 text-right">
                       <span t-if="company.report_header" t-field="company.report_header" />
                   </div>
               </div>
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
        <div class="footer o_standard_footer">
            <div class="text-center" style="border-top: 1px solid black;">
<!--                <div class="col-4">-->
<!--                    <span t-field="company.email" />-->
<!--                </div>-->
<!--                <div class="col-4">-->
<!--                    <span t-field="company.phone" /> <br/>-->
<!--                    <span t-field="company.mobile" />-->
<!--                </div>-->
<!--                <div class="col-4">-->
<!--                    <span t-field="company.website" />-->
<!--                </div>-->
                <ul class="list-inline mb4">
                    <span t-field="company.report_footer" />
                </ul>
                <br/>

<!--                <p>Page <span class="page"/> / <span class="topage" /></p>-->

            </div>
        </div>
    </template>

    <template id="school_student_profile_custom_report_template">
        <t t-call="web.html_container">
          <t t-foreach="docs" t-as="doc">
              <t t-call="wbcustom_header_foooter_pdf.weblearns_layout">
                <div class="page">
                    <div class="oe_structure" />

                    <div class="col-12 text-center">
                        <img alt="img" t-if="doc.student_img" t-att-src="image_data_uri(doc.student_img)"
                             style="max-height:150px;"/>
                        <h2 t-field="doc.name" style="border-bottom:1px solid black;"/>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-3 text-center">
                            <b>School Name</b>
                            <p t-field="doc.school_id" />
                        </div>
                        <div class="col-9 text-right">
                            <b>School Address</b>
                            <p t-field="doc.school_address" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            <b>Roll Number</b>
                            <p t-field="doc.roll_number" />
                        </div>
                        <div class="col-4">
                            <strong>Student Sequence</strong>
                            <p t-esc="doc.student_seq if doc.student_seq else 'Not Available'" />
                        </div>
                        <div class="col-4">
                            <b>Hobby List</b>
                            <p t-field="doc.hobby_list" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            <b>Is Virtual School</b>
                            <p t-esc="doc.is_virtual_school if doc.is_virtual_school else 'Not Available'" />
                        </div>
                        <div class="col-4">
                            <b>Currency</b>
                            <p t-field="doc.currency_id" />
                        </div>
                        <div class="col-4">
                            <b>Student Fees</b>
                            <p t-esc="doc.student_fees" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            <b>Birthdate</b>
                            <p t-esc="doc.bdate or 'Not Available'" />
                        </div>
                        <div class="col-4">
                            <b>Student Age</b>
                            <p t-esc="doc.student_age" />
                        </div>
                        <div class="col-4">
                            <b>Total Fees</b>
                            <p t-esc="doc.total_fees" />
                        </div>
                    </div>

                </div>
            </t>
          </t>
        </t>
    </template>

    <record id="school_student_profile_report_temp" model="ir.actions.report">
        <field name="name">Custom Student Card</field>
        <field name="model">school.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">wbcustom_header_foooter_pdf.school_student_profile_custom_report_template</field>
        <field name="report_file">wbcustom_header_foooter_pdf.school_student_profile_custom_report_template</field>
        <field name="print_report_name">'Student-Card'</field>
        <field name="binding_model_id" ref="school_student.model_school_student"/>
        <field name="binding_type">report</field>
    </record>
</odoo>